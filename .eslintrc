{
    "extends": "airbnb-base/legacy",
    "env": {
        "mocha": true,
        "node": true,
        "browser": true
    },
    "rules": {
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "comma-dangle": ["error", "always-multiline"],
        "no-unused-vars": ["error", { "varsIgnorePattern": "should|expect" }],
        "no-console": "off",
        "linebreak-style": "off",
        "eol-last": "off"
    }
}