{
  "manifest_version": 2,
  "name": "for sociotime.ru",
  "description": "Это расширение только для сайта sociotime.ru (only for sociotime.ru)",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://sociotime.ru/index.php*"
      ],
      "js": ["jquery.js", "contentz.js"],
      "css": ["chromeext.css"]
    }
  ],
  "web_accessible_resources": [
    "injected.js"
  ],
  "browser_action": {
    "name": "sociotime",
    "default_icon": {
      "16": "/images/icon16.png",
      "24": "/images/icon24.png",
      "32": "/images/icon32.png"
    }
  }
}
